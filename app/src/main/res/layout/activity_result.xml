<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bit2016.gugudanfighter.ResultActivity">

    <TextView
        android:text="0"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correctCount1"
        android:layout_marginLeft="149dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:layout_marginStart="16dp" />

    <TextView
        android:text="0"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correctCount2"
        android:layout_marginLeft="149dp"
        android:layout_marginStart="56dp"
        android:layout_alignBaseline="@+id/correctCount1"
        android:layout_alignBottom="@+id/correctCount1"
        android:layout_toEndOf="@+id/correctCount1" />

    <TextView
        android:text="/"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview1"
        android:layout_marginLeft="149dp"
        android:layout_alignBaseline="@+id/correctCount2"
        android:layout_alignBottom="@+id/correctCount2"
        android:layout_toEndOf="@+id/correctCount1"
        android:layout_marginStart="26dp" />

    <TextView
        android:text="게임을 다시 시작하시겠습니까?"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="YES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="45dp"
        android:id="@+id/button_restartYes" />

    <Button
        android:text="NO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_restartYes"
        android:layout_alignStart="@+id/correctCount1"
        android:id="@+id/button_restartNo" />

    <TextView
        android:text="맞춘개수 : "
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:id="@+id/textView9"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView12" />


</RelativeLayout>
